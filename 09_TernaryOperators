// Conditionals: Ternary Operator

// condition ? ifTrue : ifFalse;

// let soup = "Chicken Noodle Soup";
let soup;					// undefined variable here. Considered false.

let response = soup
    ? "Yes, we have soup on the menu."
    : "Sorry, no soup on menu";			

console.log(response);				// "Sorry, no soup on menu"



let soup = "Chicken Noodle Soup";
// let soup;

let response = soup
    ? "Yes, we have soup on the menu."
    : "Sorry, no soup on menu";

console.log(response);				// "Yes, we have soup on the menu."
