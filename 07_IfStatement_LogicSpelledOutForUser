let playerOne = "scissors";
let computer = "rock";

switch (playerOne) {
    case computer:
        console.log(`playerOne = ${playerOne}, computer = ${computer}`);
        console.log("Tie game");
        break;
    case "rock":
        if (computer === "paper") {
            console.log(`playerOne = ${playerOne}, computer = ${computer}`);
            console.log("rock loses to paper, computer wins");
        } else {
            console.log(`playerOne = ${playerOne}, computer = ${computer}`);
            console.log("rock beats scissors, playerOne wins");
        }
        break;
    case "paper":
        if (computer === "scissors") {
            console.log(`playerOne = ${playerOne}, computer = ${computer}`);
            console.log("paper loses to scissors, computer wins");
        } else {
            console.log(`playerOne = ${playerOne}, computer = ${computer}`);
            console.log("paper beats rock, playerOne wins");
        }
        break;
    case "scissors":
        if (computer === "rock") {
            console.log(`playerOne = ${playerOne}, computer = ${computer}`);
            console.log("scissors loses to rock, computer wins");
        } else {
            console.log(`playerOne = ${playerOne}, computer = ${computer}`);
            console.log("scissors beats paper, playerOne wins");
        }
        break;
}
